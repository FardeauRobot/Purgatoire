######################### GENERAL RULES ######################### 
#################################################################
NAME		= pipex

CC			= cc
CFLAGS		= -Wall -Wextra -Werror

######################### SRCS ######################### 
########################################################
SRCS_PATH	= srcs
SRCS_FILES	= main.c

SRCS		= $(addprefix $(SRCS_PATH)/, $(SRCS_FILES))
OBJS		= $(SRCS:.c=.o)

######################### MAKE #########################
########################################################

all: $(NAME)

$(NAME): $(OBJS)
	$(CC) $(CFLAGS) $(OBJS) -o $(NAME)

%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	rm -f $(OBJS)

fclean: clean
	rm -f $(NAME)

re: fclean all

.PHONY: all clean fclean re
